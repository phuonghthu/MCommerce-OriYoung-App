<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingVertical="@dimen/vertical_padding"
    tools:context=".ProductCatalog">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCatalog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:text="Tẩy trang"
            android:textColor="@color/black"
            app:titleMarginStart="-8dp"
            android:textSize="@dimen/medium_textSize" />

    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/imvCart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintEnd_toEndOf="@+id/toolbarCatalog"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toEndOf="@+id/imvSearch"
        app:layout_constraintTop_toTopOf="@+id/toolbarCatalog" />

    <ImageView
        android:id="@+id/imvSearch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarCatalog" />
    <LinearLayout
        android:id="@+id/layoutOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarCatalog"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/imvSort"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/stroke_button"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sort"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sắp xếp"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_semibold"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imvFilter"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/stroke_button"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bộ lọc"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_semibold"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imvCatalog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/stroke_button"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_catalog"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_semibold"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutOption">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCatalog"
                android:layout_width="match_parent"
                android:padding="@dimen/horizontal_padding"
                app:spanCount="2"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/layoutOption"/>
            <LinearLayout
                android:id="@+id/imvSeemore"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/stroke_button"
                android:paddingVertical="5dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>