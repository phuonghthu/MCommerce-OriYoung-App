<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_bar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".SearchBarActivity"
    android:paddingHorizontal="@dimen/horizontal_padding">

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_round_button"
        android:drawableLeft="@drawable/ic_search_grey"
        android:drawablePadding="10dp"
        android:fontFamily="@font/gilroy_regular"
        android:hint="@string/hint_search"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/medium_textSize"
        app:layout_constraintEnd_toStartOf="@+id/btnNoti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/medium_margin"/>

    <TextView
        android:id="@+id/btnNoti"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_noti"
        android:background="@drawable/bg_layout"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCart"
        android:layout_marginEnd="@dimen/medium_margin" />
    <TextView
        android:id="@+id/btnCart"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_cart"
        android:background="@drawable/bg_layout"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>