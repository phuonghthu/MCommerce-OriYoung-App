<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:orientation="horizontal"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:gravity="center">

            <com.theophrast.ui.widget.SquareImageView
                android:id="@+id/imvCart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_product" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtProductNameCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nước Tẩy Trang L'Oreal Tươi Mát Cho Da Dầu, Hỗn Hợp 400ml
    Micellar Water 3-in-1 Refreshing Even For Sensitive Skin"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="12dp"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtProductPriceCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.000 VNĐ"
                        android:textColor="@color/greylight"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txtProductQuantityCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x2"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/medium_textSize"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_discount" />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txtProductAmountCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200.000 VNĐ"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="@dimen/medium_textSize"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>