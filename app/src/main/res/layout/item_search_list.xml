<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.theophrast.ui.widget.SquareImageView
            android:id="@+id/imvList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_product"
            android:layout_marginEnd="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtProductNameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nước Tẩy Trang L'Oreal Tươi Mát Cho Da Dầu, Hỗn Hợp 400ml
    Micellar Water 3-in-1 Refreshing Even For Sensitive Skin"
                android:fontFamily="@font/gilroy_regular"
                android:textSize="10dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtProductPriceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100.000"
                android:textStyle="bold"
                android:textColor="@color/secondaryorange"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>