<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_back">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn thật sự muốn thoát?"
            android:fontFamily="@font/gilroy_semibold"
            android:textSize="@dimen/medium_textSize"
            android:gravity="center"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greylight"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn sẽ không thể mua hàng và nhận những ưu đãi từ OriYoung nếu không có tài khoản nhà Ori đấy nhé!"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="@dimen/xsmall_textSize"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/btndongy"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="ĐỒNG Ý"
                android:background="@drawable/button_layout"
                app:backgroundTint="@null"
                android:textColor="@color/primarygreen"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/small_textSize"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnhuy"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="HỦY"
                android:background="@drawable/button_layout_cancel"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/small_textSize"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>