<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".signup_success"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/bg_dialog_white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/vertical_padding"
        android:gravity="center">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_circle_check"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký thành công"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/xlarge_textSize"
            android:gravity="center"
            android:textColor="@color/primarydarker"
            android:layout_marginTop="@dimen/medium_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primarygreen"
            android:layout_marginTop="@dimen/large_margin"/>

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã đăng kí tài khoản thành công. Hãy khám phá ngay hàng ngàn ưu đãi từ OriYoung nhé!"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="@dimen/medium_textSize"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/large_margin" />

        <Button
            android:id="@+id/btnCallAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám phá ngay"
            android:textSize="@dimen/medium_textSize"
            android:fontFamily="@font/gilroy_semibold"
            android:backgroundTint="@color/primarygreen"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/vertical_padding"
            android:layout_marginTop="@dimen/large_margin"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>