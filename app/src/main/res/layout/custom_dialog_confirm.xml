<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/vertical_padding">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn thật sự muốn thoát?"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/xlarge_textSize"
            android:gravity="center"
            android:textColor="@color/primarydarker" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primarygreen"
            android:layout_marginTop="@dimen/large_margin"/>
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn sẽ không thể mua hàng và nhận những ưu đãi từ OriYoung nếu không có tài khoản nhà Ori đấy nhé!"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="@dimen/medium_textSize"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/large_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/large_margin">
            <Button
                android:id="@+id/btndongy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐỒNG Ý"
                android:background="@drawable/button_layout"
                app:backgroundTint="@null"
                android:textColor="@color/primarygreen"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/medium_textSize"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnhuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HỦY"
                android:background="@drawable/button_layout_cancel"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/medium_textSize"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>