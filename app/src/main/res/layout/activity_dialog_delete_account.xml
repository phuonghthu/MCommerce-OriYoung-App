<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DialogDeleteAccount"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:padding="@dimen/horizontal_padding"
    android:background="@drawable/bg_dialog_white">
    <TextView
        android:id="@+id/txttitlelogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_deleteaccount_title"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:textSize="@dimen/h3_textSize"
        android:textColor="@color/primarygreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/viewline"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="@color/primarygreen"
        app:layout_constraintTop_toBottomOf="@id/txttitlelogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_deleteaccount_subtitle"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewline"
        android:layout_marginTop="20dp"
        android:gravity="center" />
    <Button
        android:id="@+id/btnDongy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primarygreen"
        android:text="ĐỒNG Ý"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_bold"
        app:layout_constraintTop_toBottomOf="@id/txtname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnHuy"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
    <Button
        android:id="@+id/btnHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HỦY"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_bold"
        android:backgroundTint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/txtname"
        app:layout_constraintStart_toEndOf="@id/btnDongy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_weight="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>