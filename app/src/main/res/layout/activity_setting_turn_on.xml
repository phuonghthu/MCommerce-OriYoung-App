<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_TurnOn"
    android:paddingVertical="@dimen/vertical_padding"
    android:paddingHorizontal="@dimen/horizontal_padding">
    <ImageView
        android:id="@+id/imgbackpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_backpage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txtCaidat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:fontFamily="@font/gilroy_bold"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintStart_toEndOf="@id/imgbackpage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgbackpage"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewdoimatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtCaidat"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgdoimatkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txtdoimatkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:fontFamily="@font/gilroy_regular"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="@id/imgdoimatkhau"
                app:layout_constraintStart_toEndOf="@id/imgdoimatkhau"
                app:layout_constraintBottom_toBottomOf="@id/imgdoimatkhau"/>
            <ImageView
                android:id="@+id/imgnarrowback1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_narrow"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgdoimatkhau"
                app:layout_constraintBottom_toBottomOf="@id/imgdoimatkhau"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewxoataikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardviewdoimatkhau"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgxoataikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bin"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txtxoataikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa tài khoản"
                android:fontFamily="@font/gilroy_regular"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="@id/imgxoataikhoan"
                app:layout_constraintStart_toEndOf="@id/imgxoataikhoan"
                app:layout_constraintBottom_toBottomOf="@id/imgxoataikhoan"/>
            <ImageView
                android:id="@+id/imgnarrowback2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_narrow"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgxoataikhoan"
                app:layout_constraintBottom_toBottomOf="@id/imgxoataikhoan"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewthongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardviewxoataikhoan"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgthongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_noti"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txtthongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:fontFamily="@font/gilroy_regular"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="@id/imgthongbao"
                app:layout_constraintStart_toEndOf="@id/imgthongbao"
                app:layout_constraintBottom_toBottomOf="@id/imgthongbao"/>
<!--            <ImageView-->
<!--                android:id="@+id/imgturnon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/icon_turnon"-->
<!--                android:paddingEnd="20dp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="@id/imgthongbao"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/imgthongbao"/>-->
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imgthongbao"
                    app:layout_constraintBottom_toBottomOf="@id/imgthongbao"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>