<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_noti_item"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/horizontal_padding"
    android:paddingVertical="10dp"
    android:elevation="2dp">
    <com.theophrast.ui.widget.SquareImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/character3"
        android:scaleType="centerCrop"
        android:layout_weight="0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginStart="@dimen/medium_margin"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đại tiệc thương hiệu"
                android:textSize="@dimen/medium_textSize"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/primarydarker"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/notiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ngày trước"
                android:textSize="@dimen/small_textSize"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/notiContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm COCOON đang sale đậm á mọi người vào mua nhé"
            android:textSize="@dimen/small_textSize"
            android:justificationMode="inter_word"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>