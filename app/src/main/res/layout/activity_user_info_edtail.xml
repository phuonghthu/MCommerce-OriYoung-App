<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="35dp">
    <LinearLayout
        android:id="@+id/LineNaviDetailIn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backicon"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/txtThongtincanhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Thông tin cá nhân"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/LineNaviDetailIn4"
            android:layout_marginTop="35dp">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Họ và tên: "
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="*"
                    android:textColor="@color/error"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Vui lòng nhập thông tin"
                app:helperTextTextColor="@color/error"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:endIconMode="clear_text"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gilroy_regular"
                    android:hint="Tên khách hàng"
                    android:textSize="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:buttonTint="@color/black"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gilroy_regular"
                    android:layout_marginEnd="16dp"
                    android:text="Nam" />
                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gilroy_regular"
                    android:layout_marginEnd="16dp"
                    android:text="Nữ" />
                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Không tiết lộ" />
            </RadioGroup>
            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Ngày sinh "
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gilroy_regular"
                    android:hint="Ví dụ: 08/09/20022"
                    android:textSize="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại "
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Để thay đổi số thông tin, vui lòng liên hệ bộ phận CSKH"
                app:helperTextTextColor="@color/error"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:endIconMode="clear_text"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ví dụ: 0376183628"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Để thay đổi số thông tin, vui lòng liên hệ bộ phận CSKH"
                app:helperTextTextColor="@color/error"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:endIconMode="clear_text"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gilroy_regular"
                    android:hint="Ví dụ: thiendia@gmail.com"
                    android:textSize="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/primarydarker"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Chỉnh sửa"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    android:layout_marginRight="25dp"/>
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/primarybackground"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Hủy"
                    android:textSize="14dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>