            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh"
                        android:textSize="@dimen/medium_textSize"
                        android:fontFamily="@font/gilroy_medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="@string/sign"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/error"
                        android:textSize="@dimen/medium_textSize"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:hintEnabled="false"
                    app:boxStrokeErrorColor="@color/error">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_bg_state"
                        android:fontFamily="@font/gilroy_regular"
                        android:hint="Ngày sinh"
                        android:inputType="none"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/medium_textSize"
                        android:focusable="false"
                        android:onClick="showDatePicker"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="@dimen/medium_textSize"
                    android:fontFamily="@font/gilroy_medium"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:hintEnabled="false"
                    app:endIconMode="clear_text"
                    app:errorContentDescription="Để thay đổi thông tin vui lòng liên hệ bộ phận chăm sóc khách hàng"
                    app:boxStrokeErrorColor="@color/error"
                    app:errorIconDrawable="@drawable/ic_error">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Số điện thoại"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/gilroy_regular"
                        android:inputType="phone"
                        android:textSize="@dimen/medium_textSize"
                        android:background="@drawable/button_bg_state"
                        android:backgroundTint="#16000000"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng liên hệ nhân viên CSKH để thay đổi số điện thoại"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="@dimen/small_textSize"
                    android:textColor="@color/error"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/medium_textSize"
                    android:fontFamily="@font/gilroy_semibold"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:endIconMode="clear_text"
                    app:errorContentDescription="Vui lòng liên hệ nhân viên CSKH để thay đổi số điện thoại."
                    app:errorIconDrawable="@drawable/ic_error">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColorHint="@color/primarygreen"
                        android:fontFamily="@font/gilroy_regular"
                        android:inputType="phone"
                        android:enabled="false"
                        android:textSize="@dimen/medium_textSize"
                        android:backgroundTint="#16000000"
                        android:background="@drawable/stroke"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng liên hệ nhân viên CSKH để thay đổi địa chỉ email."
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="@dimen/small_textSize"
                    android:textColor="@color/error" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_layout_white_green"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HỦY"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gilroy_semibold"
                        android:textColor="@color/black"
                        android:gravity="start"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnSave"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/stroke_button"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/primarygreen"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LƯU THAY ĐỔI"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>