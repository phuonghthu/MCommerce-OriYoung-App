<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:orientation="horizontal"
    app:contentPadding="15dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái đơn hàng"
                android:fontFamily="@font/gilroy_regular"
                android:textSize="@dimen/small_textSize"
                android:textColor="@color/primarydarker"
                android:gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#MDH123"
                android:fontFamily="@font/gilroy_regular"
                android:textSize="@dimen/small_textSize"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/medium_margin"/>
        <LinearLayout
            android:id="@+id/layoutCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:gravity="center">

            <com.theophrast.ui.widget.SquareImageView
                android:id="@+id/imvCart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_product" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtProductNameCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nước Tẩy Trang L'Oreal Tươi Mát Cho Da Dầu, Hỗn Hợp 400ml
    Micellar Water 3-in-1 Refreshing Even For Sensitive Skin"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="@dimen/medium_textSize"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/small_margin">
                    <TextView
                        android:id="@+id/txtProductPriceCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.000 VNĐ"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_regular"
                        android:textSize="@dimen/medium_textSize"/>

                    <TextView
                        android:id="@+id/txtProductQuantityCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x22"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/xsmall_textSize"
                        android:fontFamily="@font/gilroy_regular"
                        android:textColor="@color/white"
                        android:paddingStart="@dimen/medium_margin"
                        android:paddingEnd="@dimen/medium_margin"
                        android:background="@drawable/bg_discount" />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txtProductAmountCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200.000 VNĐ"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="@dimen/medium_textSize"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/medium_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/small_margin">
            <TextView
                android:id="@+id/txtItemQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số sản phẩm"
                android:fontFamily="@font/gilroy_regular"
                android:textSize="@dimen/small_textSize"
                android:gravity="start"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="end"
                android:text="400.000VNĐ"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_textSize" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/medium_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/large_margin">
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã nhận"
                android:background="@drawable/button_layout_cancel"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/medium_textSize"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:background="@drawable/button_layout"
                app:backgroundTint="@null"
                android:textColor="@color/primarygreen"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/medium_textSize"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>