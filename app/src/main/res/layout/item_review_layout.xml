<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="@drawable/stroke"
        android:padding="@dimen/horizontal_padding"
        android:layout_margin="@dimen/large_vertical_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_name"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/primarygreen"
                android:textSize="@dimen/medium_textSize"
                android:layout_weight="4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|end"
                android:layout_marginStart="@dimen/horizontal_padding"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/txtIndividualRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_value"
                    android:textSize="@dimen/medium_textSize"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/imvRating"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_rate"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/small_margin"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtReviewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review..."
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_textSize"
            android:layout_marginTop="@dimen/medium_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/primarybackground">
        <com.theophrast.ui.widget.SquareImageView
            android:id="@+id/imvProductThumb"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/product_place_holder"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/product_name"
                android:textSize="@dimen/small_textSize"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:padding="@dimen/medium_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/medium_margin"
                android:paddingBottom="@dimen/medium_margin">
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/product_price"
                    android:textSize="@dimen/medium_textSize"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/secondaryorange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/horizontal_padding"/>
                <TextView
                    android:id="@+id/txtRatingValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_value"
                    android:textSize="@dimen/medium_textSize"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/small_margin"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>