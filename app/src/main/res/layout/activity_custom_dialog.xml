<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomDialog">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp">
            <ImageView
                android:id="@+id/imvSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_success"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/large_margin"/>
            <TextView
                android:id="@+id/txtDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Success_reset_password"
                android:fontFamily="@font/gilroy_semibold"
                android:textSize="@dimen/medium_textSize"
                android:gravity="center"
                android:textColor="@color/primarydarker"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/greylight"
                android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/txtDialogDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Success_reset_description"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="@dimen/xsmall_textSize"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Login"
                    app:backgroundTint="@color/primarygreen"
                    android:background="@drawable/stroke_button"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="@dimen/medium_textSize"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/xlarge_margin"/>

            </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>